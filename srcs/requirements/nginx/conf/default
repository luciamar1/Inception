server {
    listen 443 ssl;
    server_name lucia-ma.42.fr;
    
    ssl_certificate /etc/nginx/ssl/lucia-ma.42.fr.crt;
    ssl_certificate_key /etc/nginx/ssl/lucia-ma.42.fr.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    
    root /var/www/wordpress;
    index index.php index.html index.htm;
    
    # Configuración de seguridad
    client_max_body_size 64M;
    
    # Configuración de logs
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
    
    # Configuración principal
    location / {
        try_files $uri $uri/ /index.php$is_args$args;
    }
    
    # Configuración PHP - CRÍTICA para evitar 403
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass wordpress:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Headers importantes para WordPress
        fastcgi_param HTTPS on;
        fastcgi_param SERVER_NAME $server_name;
    }
    
    # Denegar acceso a archivos sensibles
    location ~ /\.ht {
        deny all;
    }
    
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Configuración de archivos estáticos
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires max;
        log_not_found off;
    }
}

# Redirección HTTP a HTTPS
server {
    listen 80;
    server_name lucia-ma.42.fr;
    return 301 https://$server_name$request_uri;
}
